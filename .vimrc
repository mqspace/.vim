set tabstop=4
set t_Co=256
colorscheme molokai         "设置配色
set nocompatible            " 关闭兼容模式
syntax on
set autoindent              " 自动缩进
set showcmd                 " 显示输入的命令
set number                  " 显示行号
set cursorline              "显示光标行"
set incsearch				"增量式搜索
set hlsearch				"搜索高亮
set ignorecase				"搜索忽略大小写
